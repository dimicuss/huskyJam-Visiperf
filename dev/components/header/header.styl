.header
	position fixed
	width 100%
	height 99px
	box-sizing border-box
	border-bottom 1px solid alto
	top 0
	background #ffffff
	z-index 1000

.header__inner {
	max-width 1600px
	margin 0 auto
}

.nav
.logo
	padding 0 20px

// logo
.logo
	lost-column 1 / 12

	img
		display block
		margin 13px 0 0px 16px

// navigation
.nav-mobile
	display none
	width 50px
	height 50px

.nav
	lost-column: 11 / 12
	height 99px

.nav-top
	list-style-type none
	float right
	height 99px
	margin 0
	padding 0

.nav-top__item
	position relative
	float left
	line-height 59px
	margin 18px 0 0 25px
	transition: ease 0.2s;

	&:hover
		.subnav
			display block

.nav-top__link_last
	font-size 12px

.nav-top__item.nav-top__item_last
	margin 18px 28px 0 35px

.nav-top__link
	padding 22px 0
	cursor pointer
	font-weight 500

	&:hover
		color pelorous

// sub navigation
.subnav
	display none
	position absolute
	top 60px
	left -40px
	margin 0
	padding 0
	list-style-type none
	box-shadow 0 0 5px alto
	z-index 5
	background #fff

.subnav__item
	height 67px
	line-height 69px
	width 242px
	border 1px solid alto
	border-bottom none
	box-sizing border-box

	&:last-child
		border-bottom 1px solid alto

.subnav__link
	display block
	width 100%
	height 100%
	padding-left 20px
	line-height 69px
	font-size 15px
	color dove_gray
	text-decoration none
	cursor pointer
	transition: ease 0.2s;

	&:hover
		background snow_drift
		color pelorous

	span
		line-height: 25px;
		display: inline-block;
		vertical-align: middle;

+above(w768)
	.nav-top
		display block

+below(w768)
	.header
		height 50px;

	.logo
		img
			height 35px
			margin 7px 0 0 0

	.nav-mobile
		display block
		float right
		margin 12px 0 0
		height 30px
		width 30px

	.nav-top
		display none

	.logo
		lost-column 5 / 12
		lost-offset: 2 / 12

	.nav
		lost-column 5 / 12
		height 50px

	.nav-top
		width 100%
		position absolute
		float none
		left 0
		top 50px
		height auto

	.nav-top__item
		float none
		margin 0
		background #fff
		border-bottom: 1px solid alto;

		&:hover
			.subnav
				display none

	.nav-top__item.nav-top__item_last
		margin 0

	.nav-top__link
		display block
		text-align right
		padding 0 30px 0 0

	.subnav
		display none
		position relative
		top 0
		left 0
		box-shadow none

	.subnav__item
		width 100%
		border none
		border-bottom none

		&:last-child
			border-bottom none

	.subnav__link
		text-align right
		padding-right 50px