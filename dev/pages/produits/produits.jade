                        div.product-cart__price 75€


        section.products-block
            .product-contact
                .product-contact__map#mapGoogle
                .product-contact__info
                    .product-contact__inner
                        .product-contact__address 5 place Charles de Gaulle 17200 ROYAN

                        .product-contact__time
