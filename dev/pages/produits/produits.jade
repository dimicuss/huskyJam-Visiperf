extends ../../common/jade/_default

block pageInfo
    - var page = {}
    - page.id = 'produits'
    - page.title = 'Produits'
    - page.description = page.title
    - html_class = {class: 'snowdrift'}

block og
    //- open graph
    +og({type: 'website', title: page.title, description: page.description, url: '', img: '', locale: ''})

append jshead
    script(defer, src='js/produits.js')


block content
    include ../../components/header/_header
    div.wrapper
        section.product-cart
            div.product-cart__left

                .breadcrumbs
                    a(href="" title="" class="breadcrumbs__link").
                        Tendance Liège Royan
                    span(class="breadcrumbs__current").
                        Sandales 9011

                .product-cart__image
                    img(src="img/item-preview.jpg" alt="")


            div.product-cart__right
                div.product-cart__col
                    h1.product-cart__header Sandales en liège
                        div TENDANCE liège

                    div.product-cart__descripton                
