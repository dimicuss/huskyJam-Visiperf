.wild_sand{
	background wild_sand
}

.wrapper
	max-width 1600px
	margin 0 auto
	background wild_sand

.product-cart
	lost-utility clearfix
	background wild_sand
	width 100%


	&__left
		lost-column 1/2
		padding 71px 64px 0 66px
		box-sizing border-box

	&__image
		margin-top 100px
		text-align center
		width 100%
		max-width 670px
		height 470px
		line-height 470px

		img
			vertical-align middle
			width 100%
			max-width 470px

	&__right
		lost-column 1/2
		lost-center 100%
		padding 108px 0 160px
		background white

	&__col
		lost-column 3/4
		float none !important
		margin 0 auto
		padding 0 12px
		box-sizing border-box

		&:last-child
			margin-right auto

	&__header
		text-align center
		font-weight 300
		font-size 48px
		color downriver

		div
			font-size 15px
			font-weight 500
			margin-top 13px
			text-transform uppercase
			color black

	&__descripton
		margin-top 70px

	&__strong
		font-weight 500
		font-size 15px

	&__text
		font-size: 12px;
		line-height: 20px;
		margin: 10px 0 33px;
		padding-right: 55px;
		letter-spacing: 0.15px;

	&__pointer-item
		margin-top 12px

	&__pointer-item
		display inline-block
		width 36px
		height 36px
		text-align center
		line-height 35px
		border 1px solid silver_chalice
		color silver_chalice
		margin-right 3px
		font-size 12px
		cursor pointer
		box-sizing border-box

		&:hover
			border-color downriver
			color downriver

	&__pointer-item_out-stock
		background url('/img/out-stock.png') center center no-repeat

		&:hover
			border-color silver_chalice
			color silver_chalice
	&__price
		position relative
		margin 41px 0 0 7px
		font-size 40px
		font-weight 300
		color madison

// Адаптивность для карточки
+below(1024px)

	.product-cart

		&__left
			display	block
			float none
			width 100%
		
		&__image
			margin 0 auto
			height auto
			line-height normal
			padding-top 50px


		&__right
			display	block
			float none
			width 100%

		&__text
			padding-right 0

+below(1024px)
	.product-cart__right
		padding 0 0 40px 0

+below(768px)

	.product-cart__left
		padding-top 40px

+below(320px)

	.product-cart__left
		padding 20px 20px 0px 20px

// Блок с картой и списком товарами
.products-block
	background snow_drift
	lost-utility clearfix
	padding-top 40px

// Левый блок с картой и формой
.product-contact
	lost-column 1/4
	padding 87px 8px 20px 20px
	box-sizing border-box

	&__map
		width 100%
		height 380px
		background #c9c9c9

		iframe
			width 100%
			height 100%

	&__info
		position relative

	&__inner
		background white
		padding: 44px 0 79px 44px;
		font-size: 14px;
		
	&__address
	&__time
	&__phone
		position relative
		padding-left 40px

	&__address:before
		retina_sprite($s-r-icon1)

	&__time:before
		retina_sprite($s-r-icon2)

	&__phone:before
		retina_sprite($s-r-icon3)

	&__address
		padding-top 5px
		margin-bottom 32px
		
		&:before
			content ''
			position absolute
			top 0
			left -1px
		
	&__time
		&:before
			content ''
			position absolute
			top 2px
			left 2px

	&__time-now
		color atlantis
		font-weight 500

	&__time-month
		font-style italic
		font-size 11px
		letter-spacing .3px
		margin-top 2px

	&__table
		margin-top 17px
		border-spacing 0
		border-collapse collapse

		td
			vertical-align top
			letter-spacing -.3px
			padding-bottom 1px
		
			&:first-child
				font-weight bold
				font-size 12px
				width 46px
				padding-left 3px
				letter-spacing normal

	&__phone
		margin-top 20px
		padding-top 3px
		font-weight bold

		&:before
			content ''
			position absolute
			top 0
			left 3px



	&__form
		position relative
		background white

	&__form-row
		display table
		width 100%

	&__form-col
		width 50%
		display table-cell

+below(768px)

	.product-contact__map
		height 290px

// Общие классы для формы
.input-field
	border none
	border-top 1px solid mercury
	height 45px
	line-height 44px
	padding 0 20px
	box-sizing border-box
	font-size 12px
	width 100%
	outline none
	+placeholder()
		color darkgray
		transition color .3s ease
	&:focus
		+placeholder()
			color transparent


.input-field_border-right
	border-right 1px solid mercury

textarea.input-field
	height 209px
	padding 13px 20px
	line-height 18px
	resize none

.input-button
	background downriver
	color white
	text-align center
	border none
	width 100%
	height 66px
	font-size 14px
	text-transform uppercase
	cursor pointer
	box-sizing border-box
	transition 0.3s ease

	&:hover
		background di_serria


::-webkit-input-placeholder
	font-size 12px
	opacity .8

::-moz-placeholder
	font-size 12px
	opacity .8

:-moz-placeholder
	font-size 12px
	opacity .8

:-ms-input-placeholder
	font-size 12px
	opacity .8


// Правый блок с товарами
.product-more
	lost-column 3/4
	padding 0 0 0 10px
	box-sizing border-box
	background snow_drift

	&__header
		padding 0
		margin 0
		font-size 20px
		margin-bottom 54px
		font-size 30px
		font-weight 300


// Товары
.home-refer-grid
	background-color snow_drift
	 @extend $cf

	&__col
		lost-column 1/3


// prod-box
.prod-box
	@extend $link-reset
	position relative
	display block
	max-width 377pe
	min-height 377pe
	margin 0 20pe 20pe 0
	background-color #fff
	padding 24pe 10pe
	box-sizing border-box
	transition background-color .3s ease, box-shadow .3s ease

	&:hover
		background-color #F8F8FA
		box-shadow 0 0 5px #d2d2d2

	&__price
		position absolute
		top 24pe
		right 27pe
		font-size 19pe
		color spun_pearl

	&__view
		display flex
		align-items center
		justify-content center
		height 260pe

	&__img
		display block
		max-width 100%
		max-height 100%

	&__labels
		display flex
		justify-content center
		margin-bottom 12pe

	&__label
		margin 5pe 5pe 5pe 0

	&__desc
		font-size 14.4pe
		font-weight 700
		text-align center
		text-transform uppercase



// prod-shop
.prod-shop
	@extend $link-reset
	position relative // asb img
	display block
	max-width 377pe
	min-height 377pe
	margin 0 20pe 20pe 0
	box-sizing border-box

	// overlay
	&:before
		content ''
		absolute top left right bottom
		z-index 1
		background-color #fff
		opacity .35
		transition opacity .3s ease

	&:hover:before
		opacity 0


	&__img
		absolute top left
		size 100%
		object-fit cover

	&__desc
		absolute left right bottom
		z-index 2
		padding 10pe 10pe 20pe
		text-align center


	&__txttop
		font-size 14pe
		font-weight 700
		text-transform uppercase

	&__txt
		font-size 14pe


