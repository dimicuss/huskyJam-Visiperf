	position absolute
	bottom 25px
	display block
	width 100%
	padding 0
	margin 0
	list-style none
	text-align center

	li
		position relative
		display inline-block
		width 8px
		height 8px
		margin 0 3px
		padding 0
		cursor pointer
		background mercury
		border-radius 500px

		button
			font-size 0
			display none

	li.slick-active
		background downriver







// Хлебные крошки

.breadcrumbs
	position relative
	font-size: 12px;

	&__link
		position relative
		text-decoration underline
		color black
		margin-right 12px
		
		&:after
			content '>'
			position: absolute;
			top: 1px;
			right: -11px;
			text-decoration: none;

		&:hover
			color pelorous

	&__current
		font-weight 500

