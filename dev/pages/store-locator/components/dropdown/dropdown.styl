.dropdown
    position absolute
    width 100%
    max-width 294px
    margin 0
    padding 0
    list-style none
    text-align left
    background white
    border-radius 3px
    border 1px solid silver_chalice
    margin-top 8px
    color dove_gray
    font-size 12px
    z-index 2

    &.--empty
        display none

    +below(w768)
        max-width 245px

    &.--js-hidden
        display none

    &__address
        padding 12px 0 10px 15px
        transition color 0.2s ease-in

        &__street
            font-weight 500

        &:not(:last-of-type)
            border-bottom 1px solid silver_chalice

        &:nth-of-type(2n)
            background snow_drift

        &:hover
            cursor pointer
            color curious_blue
