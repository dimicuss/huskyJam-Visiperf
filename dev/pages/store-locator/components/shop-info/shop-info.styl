.shop-info
    tablet = 748px
    display flex
    justify-content space-between
    flex-wrap wrap
    position relative
    width 100%
    padding 0 14px 0 24px
    font-size 12px
    transition box-shadow 0.2s ease-in

    +below_portrait(tablet)
        max-width 400px
        padding 10px 20px
        justify-content space-around

    &:hover
        cursor pointer

    &__km
        position absolute
        top 12px
        right 14px
        color di_serria
        font-weight 600

    &__info
        &__head
            font-size 15px
            font-weight 700
            color downriver

        &__open,
        &__closed
            font-style italic
            font-size 10px
            margin 5px 0 5px 0

        &__open
            color lima

        &__closed
            color bright_red

    &__telephone,
    &__director,
    &__mail
        &__head
            font-weight 600
            margin-bottom 20px
	        +below_portrait(tablet)
		        margin-bottom 10px

    &__column
        padding-top 40px
        padding-bottom 20px
        margin-left 10px
        +below_portrait(tablet)
            width 130px
            margin-left 0
            padding-top 15px
            padding-bottom 15px

        &.--first
            margin-left 0

        &:nth-of-type(2n)
            margin-right 12px


    &__label
        display inline-block
        position relative
        margin-top -7px
        +below_portrait(tablet)
            top 5px
            margin-top 0
            margin-left 5px

        &__logo
            width 62px
            height 59px

        &__logo__img
            width inherit
            height inherit

        &__counter
            size = 27px
            width size
            height size
            background downriver
            border-radius (size / 2)
            color white
            padding 7px 0 7px 0
            text-align center
            font-size 14px
            font-weight 400
            position absolute
            top -9px
            right 0
            transition background 0.2s ease-in

            &.--red
                background bright_red

    &__link
        display block
        margin-top 7px
        position relative
        font-size 13px
        width 96px
        height 31px
        color white
        border-radius (@height / 2)
        padding 9px 0 9px 14px
        overflow hidden
        z-index 4
        +below_portrait(tablet)
            margin-top 3px


        &__text
            position relative
            z-index 3

        &__background
            position absolute
            width inherit
            height inherit
            top 0
            left 0

        &__background.--blue
            background downriver
            z-index 1

        &__background.--dark
            background black_a
            z-index 2
            top 50%
            transform rotate(25deg) translateY(-50%)
            width 100px
            height @width
            left 43px
            transition left 0.2s ease-in

        &:hover
            cursor pointer
            [class$="__background --dark"]
                left 10px

        &:after
            content ''
            display inline-block
            position relative
            margin-left 34px
            z-index 3
            retina_sprite($s-arrow)
